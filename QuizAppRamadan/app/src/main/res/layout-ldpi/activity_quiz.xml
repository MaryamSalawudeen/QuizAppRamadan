<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50"
    android:padding="5dp"
    tools:context=".QuizActivity">


    <TextView
        android:id="@+id/txttotalQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="Questions: 1/200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="Score: 1/200" />
        <TextView
            android:id="@+id/txtcorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#0C377C"
            android:textSize="16sp"
            android:text="Correct: 1/200" />
        <TextView
            android:id="@+id/txtwrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#BE1313"
            android:textSize="16sp"
            android:text="wrong: 1/50" />

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="00:50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:orientation="vertical">


        <TextView
            android:id="@+id/txtViewQuestionCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="In what chapter of the quran did Allah teach us the etiquettes of entering into somebody elseâ€™s house? "
            android:textColor="#fff"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/question_container_background"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suratul Ankabut"
                android:background="@drawable/buttons_background"
                android:textSize="16sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"

                android:textColor="#fff"
                android:button="@null"
                android:freezesText="true"
                />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suratul Mujadilah"
                android:background="@drawable/buttons_background"
                android:textSize="16sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"

                android:textColor="#fff"
                android:button="@null"
                android:freezesText="true"/>

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suratun Noor"
                android:textSize="16sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttons_background"
                android:textAlignment="center"

                android:textColor="#fff"
                android:button="@null"
                android:freezesText="true"/>

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suratul Maryam"
                android:textAlignment="center"
                android:background="@drawable/buttons_background"
                android:textSize="16sp"
                android:padding="12sp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:button="@null"
                android:freezesText="true"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_next"
            android:background="@drawable/buttons_background"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>